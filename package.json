    "@passport-js/passport-twitter": "^1.0.8",
    "@popperjs/core": "^2.11.8",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.1",
    "chart.js": "^4.3.2",
    "cheerio": "^1.0.0-rc.10",
    "compression": "^1.7.4",
